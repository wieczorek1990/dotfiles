#!/bin/bash

DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)

link() {
    ln -fs "$PWD/$1" ~/
}

cd "$DIR"
touch ~/.project ~/.project.fish
mkdir -p ~/.config/fish/
for file in .gemrc .gitconfig .gituser .octaverc .vimrc .zprofile .zshrc
do
    link "$file"
done
ln -fs "$PWD/config.fish" ~/.config/fish/
